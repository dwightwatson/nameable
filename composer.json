{
    "name": "watson/nameable",
    "description": "Format names of users into full, familiar and abbreviated forms",
    "keywords": [
        "laravel",
        "caster",
        "names"
    ],
    "homepage": "https://github.com/dwightwatson/nameable",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Dwight Watson",
            "email": "dwight@studiousapp.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^10.0|^11.0",
        "illuminate/support": "^10.0|^11.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Watson\\Nameable\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Watson\\Nameable\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
